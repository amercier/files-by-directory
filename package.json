{
  "name": "files-by-directory",
  "version": "0.4.0",
  "description": "List files by directory recursively, using async generators.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/amercier/files-by-directory"
  },
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (http://amercier.com)",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build:clean": "rimraf dist",
    "build:cjs": "babel --ignore '**/*.spec.js' --env-name CJS -d dist/cjs src",
    "build:esm": "babel --ignore '**/*.spec.js' --env-name ESM -d dist/esm src",
    "build": "run-s build:*",
    "prepublishOnly": "run-s build",
    "doc:clean": "rimraf esdoc",
    "doc:generate": "esdoc",
    "doc": "run-s doc:*",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore --list-different '**/*.{js,json,md,yml}'",
    "lint": "run-p lint:*",
    "start": "cross-env NODE_ENV=development jest --watch --notify",
    "test": "jest",
    "demo": "babel-node demo"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "keywords": [
    "list",
    "scan",
    "files",
    "directories",
    "async",
    "generators",
    "for",
    "await",
    "of"
  ],
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "regenerator-runtime": "^0.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-async-generator-functions": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-unicorn": "^7.0.0",
    "husky": "^2.0.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --list-different",
    "*.js": [
      "eslint",
      "jest --bail --findRelatedTests"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-async-generator-functions"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "0.10"
          }
        }
      ]
    ],
    "env": {
      "CJS": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "6"
              },
              "modules": "commonjs"
            }
          ]
        ]
      },
      "ESM": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "6"
              },
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "jest-extended",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended",
      "plugin:unicorn/recommended",
      "prettier",
      "prettier/unicorn"
    ],
    "env": {
      "browser": false
    },
    "rules": {
      "no-restricted-syntax": 0,
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^regeneratorRuntime$"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./esdoc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  }
}
